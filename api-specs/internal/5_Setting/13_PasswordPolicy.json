        },
        "complexity": {
          "type": "integer",
          "description": "The level of password complexity required for the user password. It is represented by an integer value. Complexity Levels: (Low Complexity), (Medium Complexity), (High Complexity). *Min:1* & *Max:4*"
        },
        "expiration": {
          "type": "integer",
          "description": "The number of days after which the user password will expire and require a change. <br> if value is *-1* this is for **Never expiration**"
        },
        "expirationNotificationDays": {
          "type": "integer",
          "description": "The number of days before the password expiration when a notification should be shown to the user."
        },
        "minimumDuration": {
          "type": "integer",
          "description": "The minimum number of days for which a user must keep a password before being allowed to change it again. <br> if value is *-1* this is for **Never**  "
        },
        "accountLockout": {
          "type": "integer",
          "description": "The maximum number of failed login attempts allowed before the user account gets locked out."
        },
        "accountLockoutDuration": {
          "type": "integer",
          "description": "The duration (in minutes) for which a user account remains locked after reaching the maximum number of failed login attempts. <br> if value is *-1* this is for **Account locked out forever**  "
        },
